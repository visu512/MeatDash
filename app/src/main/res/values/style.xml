<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Snackbar style -->
    <style name="AppSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/snackbar_background</item>
    </style>

    <!-- Rounded / Circle ImageView shapes -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- TextInputLayout (OutlinedBox) -->
    <style name="WeightInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Animated app theme (use this in Manifest to enable slide animations) -->
    <style name="AppTheme.Animated" parent="Base.Theme.MEATDASH">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <!-- Slide animations for activity transitions -->
    <style name="SlideAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Collapsing toolbar titles -->
    <style name="ExpandedAppBarTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsedAppBarTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Drawer menu item text -->
    <style name="TextAppearance.DrawerMenuItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
